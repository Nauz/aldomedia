	height 83.75em
	background #58303F url(/img/header.svg) no-repeat
	background-size: contain
	width 100%

.header-top
	margin-top 40px
	height 3.75em
	opacity 0.8
	background-color #482030

.logoContainer
	lost-column 4/12
	lost-offset 3/12
	height 140px
	lost-align middle-left

.main-nav
	lost-column 5/12
	height 100px
	lost-flex-container: row;
	justify-content: space-between;
	align-items: center
	font-family 'Days One'
	color white
	font-family Montserrat
	font-size 0.875em
	font-weight 700
	text-transform uppercase
	height 3.75em
	opacity 0.8
	background-color #482030

.main-nav ul li, .main-nav ul li a
	all: initial

