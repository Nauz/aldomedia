@lost flexbox flex

html
	all initial
	font-size 16px 
	font-size: responsive;
	min-font-size: 16px

body
	// all initial
	// lost-utility edit
	background #58303F
	font-family $opensans

h1, h2, h3
	color white
	font-family "Days One"
	font-size 2.4em
	font-weight 700
	text-transform uppercase
	text-align center

h2
	color #b9b9b9
	font-size 30px
	margin 71px auto 57px auto
	text-align center
	
h3
	font-size 18px
	text-align left	

// .cf
// 	lost-utility clearfix
.g-center
	lost-center: 1140px 15px

.g-c-uw
	all initial
	lost-flex-container row
	width 100%
	justify-content center


.g-sec, .g-in-sec
	lost-flex-container row
	width 100%

.g-in-sec
	align-items flex-start


.g-sec_h
	lost-flex-container: row;
	text-align center
	width 100% 
	
	
.above-all
	position: relative
	z-index 100

	
.g-ftb
	lost-flex-container: column;
	lost-column 3/12 0 0
	min-height 100%
	align-self stretch

.al_g-btn
	all initial
	border-radius 10px
	padding 18px 28px
	color white
	font-family "Days One"
	font-size 18px
	font-weight 700
	text-transform uppercase	